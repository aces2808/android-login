<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIrst Name:"
            android:id="@+id/tvFname" android:layout_alignParentLeft="true" android:layout_marginLeft="7dp"
            android:layout_alignParentTop="true" android:layout_marginTop="26dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Last Name:"
              android:id="@+id/tvLastName"
              android:layout_alignLeft="@+id/tvFname" android:layout_alignBottom="@+id/etLname"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="User Name:"
              android:id="@+id/tvUserName"
              android:layout_alignLeft="@+id/tvFname" android:layout_alignParentTop="true"
              android:layout_marginTop="133dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Password:"
              android:id="@+id/tvPassword"
              android:layout_alignLeft="@+id/tvFname" android:layout_alignBottom="@+id/etPassword"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etFname" android:layout_alignParentLeft="true" android:layout_marginLeft="160dp"
            android:layout_alignParentTop="true" android:layout_marginTop="12dp" android:width="120dp"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/etLname"
              android:width="120dp" android:layout_alignLeft="@+id/etFname" android:layout_alignParentTop="true"
              android:layout_marginTop="58dp"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/etSignUpUserName"
              android:width="120dp"
              android:layout_alignLeft="@+id/etFname" android:layout_alignBottom="@+id/tvUserName"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/etPassword"
              android:width="120dp"
              android:layout_alignLeft="@+id/etFname" android:layout_alignParentTop="true"
              android:layout_marginTop="176dp" android:inputType="textPassword"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/bSubmit"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="241dp"
            android:onClick="onSubmit"/>
</RelativeLayout>